

	<h3>New Comment</h3>

<div class = "new-comment">


	<%= form_for(Comment.new(:user_id => @user.id, :zipcode_id => @user.zipcode_id)) do |f| %>

<%=  f.hidden_field :user_id %>
<%=  f.hidden_field :zipcode_id %>
		

	<div class = "field">
		<%= f.text_area :body %>
	</div>

	<div class = "field">
		<%= f.submit  %>
	</div>

<% end %>


</div>