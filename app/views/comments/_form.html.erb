

	<h3 id = "new-comment">New Comment</h3>




	<%= form_for(Comment.new(:user_id => @user.id, :zipcode_id => @user.zipcode_id), :remote => true) do |f| %>

<%=  f.hidden_field :user_id %>
<%=  f.hidden_field :zipcode_id %>
		

	<div class = "field">
		<%= f.text_area :body %>
	</div>

	<div class = "field">
		<%= f.submit  %>
	</div>

<% end %>


